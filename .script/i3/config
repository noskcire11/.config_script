assign [class="^Google-chrome$"] $ws2
assign [class="^Wp[sp]|Et$"] $ws3
assign [class="^TelegramDesktop$"] $ws9
 
for_window [class="^Termite$"] workspace $ws1
for_window [class="^Google-chrome$"] workspace $ws2
for_window [class="^Wp[sp]|Et$"] workspace $ws3
for_window [class="^TelegramDesktop$"] workspace $ws9
for_window [class="^Spotify$"] fullscreen enable; move to workspace $ws10; workspace $ws10



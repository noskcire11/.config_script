# brightness
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5 && pkill -SIGRTMIN+10 i3blocks
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 && pkill -SIGRTMIN+10 i3blocks
bindsym Shift+XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 1 && pkill -SIGRTMIN+10 i3blocks
bindsym Shift+XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 1 && pkill -SIGRTMIN+10 i3blocks
bindsym Control+XF86MonBrightnessUp exec --no-startup-id xbacklight -set 100 && pkill -SIGRTMIN+10 i3blocks
bindsym Control+XF86MonBrightnessDown exec --no-startup-id xbacklight -set 1 && pkill -SIGRTMIN+10 i3blocks


# volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle && pkill -SIGRTMIN+11 i3blocks
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +2% && pactl set-sink-mute 0 0 && pkill -SIGRTMIN+11 i3blocks
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -2% && pkill -SIGRTMIN+11 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +10% && pactl set-sink-mute 0 0 && pkill -SIGRTMIN+11 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -10% && pkill -SIGRTMIN+11 i3blocks
bindsym Control+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +50% && pactl set-sink-mute 0 0 && pkill -SIGRTMIN+11 i3blocks
bindsym Control+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -50% && pkill -SIGRTMIN+11 i3blocks


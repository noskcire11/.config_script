bindsym Shift+Print exec --no-startup-id maim -s | xclip -selection clipboard -t image/png
# save the printscreen
bindsym Control+Print exec --no-startup-id maim ~/Pictures/$(date +%s).jpg
bindsym Control+Mod1+Sys_Req exec --no-startup-id maim -i $(xdotool getactivewindow) ~/Pictures/$(date +%s).jpg
bindsym Control+Shift+Print exec --no-startup-id maim -s ~/Pictures/$(date +%s).jpg


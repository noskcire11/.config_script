        format = "ðŸ”‹ %percentage"
	last_full_capacity=false
	integer_battery_capacity=true
}

tztime local {
        format = "%a, %d %B   %I:%M %p  "
}

volume master {
       format = "ðŸ”Š %volume"
       format_muted = "ðŸ”‡ %volume"
       device = "pulse:0"

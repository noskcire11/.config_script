general {
        colors = true
        interval = 1
}

order += "ethernet _first_"
order += "wireless _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
	color_good="#FFFFFF"
        format_up = "ðŸ“¶ %essid"
        format_down = "ðŸš« "
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        color_good="#FFFFFF"
	format_up = "ðŸ”Œ"
        format_down = ""
}

